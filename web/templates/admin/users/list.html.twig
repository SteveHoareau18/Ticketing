{% extends 'base.html.twig' %}

{% block title %}Ticketing | Gestion des utilisateurs{% endblock %}

{% block body %}
    <h1 class="text-center font-bold">Gestion des utilisateurs</h1>
    <div>
        <a href="{{ path('app_user_new') }}" class="btn btn-secondary ml-1 mb-3">Créer un utilisateur</a>
    </div>
    <div class="">
        <table class="table">
            <tr>
                <th>Nom d'utilisateur</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Service</th>
            </tr>
            <tbody>
            {% for user in users %}
                <tr>
                    <td class="py-2 p-20 border-b text-left">{{ user.username }}</td>
                    <td class="py-2 p-20 border-b text-left">{{ user.firstname }}</td>
                    <td class="py-2 p-20 border-b text-left">{{ user.name }}</td>
                    <td class="py-2 p-20 border-b text-left">{{ user.service.name }}</td>
                    <td class="py-2 p-14 pl-10 border-b text-left">
                        <a href="{{ path('app_user_see',{'username': user.username}) }}" class="btn btn-info">Voir les
                            statistiques
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                 class="bi bi-eye" viewBox="0 0 16 16">
                                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"></path>
                                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"></path>
                            </svg>
                        </a>
                    </td>
                    <td class="py-2 p-14 pl-10 border-b text-left">
                        <a href="{{ path('app_user_edit',{'username':user.username}) }}" class="btn btn-warning">Modifier
                            les informations
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                 class="bi bi-pencil" viewBox="0 0 16 16">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"></path>
                            </svg>
                        </a>
                    </td>
                    <td class="py-2 p-14 pl-10 border-b text-left">
                        {{ include('admin/users/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="mt-3 ml-2 mb-3 grid grid-cols-3 gap-4">
        <a href="{{ path('app_main') }}" class="btn btn-primary w-full">VOIR LE DASHBOARD</a>
        <a href="{{ path('app_user') }}" class="btn btn-success w-full">GESTION DES UTILISATEURS</a>
        <a href="{{ path('app_configuration_mail') }}" class="btn btn-primary w-full">PARAMETRE MAIL</a>
    </div>
{% endblock %}
